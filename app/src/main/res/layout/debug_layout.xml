            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_gpsNmea_open"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="GPSNMEA开始保存"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_gpsNmea_close"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="GPSNMEA停止保存"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/open_UC_browser"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="浏览器"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/open_record"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="录音"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/open_dial"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="拨号"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button_open_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="音乐"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button_open_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="照相"
                android:textColor="@color/white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:onClick="onBluetoothPhonePullBook"
                android:text="同步通讯录"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/test_storage_space"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:onClick="testStorageSpace"
                android:text="测试磁盘管理"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ip_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="保存"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_ip_reset"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:text="重置"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/open_webSocket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:onClick="openWebSocket"
                android:text="开启接收推送"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/close_webSocket"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:onClick="closeWebSocket"
                android:text="关闭接收推送"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/init_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:onClick="initNetwork"
                android:text="初始化网络模块"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/release_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_vehicle_big_selector"
                android:onClick="releaseNetwork"
                android:text="释放网络模块"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="UserName:"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <EditText

                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/ip_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioBtnFormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="正式服务器"/>

                    <RadioButton
                        android:id="@+id/radioBtnTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试服务器"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ip:"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/ip_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Port:"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/port_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TestIp:"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/test_ip_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TestPort:"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <EditText

                    android:id="@+id/edt_testPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
